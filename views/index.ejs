<% include partials/header %>

<div class='container'>

   <header class="jumbotron">
      <div class="container">
         <h1 class="display-4">Welcome to YelpCamp</h1>
         <p class="lead">View our hand-picked campgrounds from all over the world</p>
         <hr class="my-4">
         <a class="btn btn-primary btn-lg" href="/campgrounds/new" role="button">Add a New Campground</a>
      </div>
   </header>

   <div class='row text-center' style='display: flex; flex-wrap: wrap;'>

      <% campgrounds.forEach((e) => { %>
      <div class='col-md-3 col-sm-6'>
         <div>
            <img src=" <%= e.image %> " class='img-thumbnail'>
            <div class='caption'>
               <h4> <%= e.name %> </h4>
            </div>
            <p>
               <a class='btn btn-primary' href="/campgrounds/<%= e._id %>">More Info</a>
            </p>
         </div>
      </div>
      <% }) %>

   </div>

</div>

<% include partials/footer %>