<% include ../partials/header %>

<div class="container d-flex justify-content-center">
   <div class='row'>

      <h1 class='col-lg-12' style='text-align: center;'>Edit Comment </h1>
      <div style='width: 30%; margin: 0 auto;'>
         <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method='POST'>
            <div class='form-group mt-3'>
                  <input class='form-control' type="text" value="<%= comment.text %>" name='comment[text]'>
            </div>
            <div class='form-group'>
                  <button class='btn btn-lg btn-secondary btn-block'>Edit Comment</button>
            </div>
            
         </form>
      </div>
   </div>
</div>

