<% include ../partials/header %>

<div class="container d-flex justify-content-center">
   <div class='row'>

      <h1 class='col-lg-12' style='text-align: center;'>Add a New Comment to <%= campground.name %> </h1>
      <div style='width: 30%; margin: 0 auto;'>
         <form action="/campgrounds/<%= campground._id %>/comments" method='POST'>
            <div class='form-group mt-3'>
                  <input class='form-control' type="text" placeholder="Comment" name='comment[text]'>
            </div>
            <div class='form-group'>
                  <input class='form-control' type="text" placeholder="Author" name='comment[author]'>
            </div>
            <div class='form-group'>
                  <button class='btn btn-lg btn-secondary btn-block'>Add Comment</button>
            </div>
            
         </form>
      </div>
   </div>
</div>

<% include ../partials/footer %>